<%- include("partials/header1") %>
<h1>Signup</h1>
<div class="container">
    
    
    <form action="/signup" method="POST">
        
        <div class="row d-flex justify-content-center">
            <div class="form-group col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                <label for="exampleName">Name</label>
                <input name="name" type="text" class="form-control" id="exampleName"  placeholder="Enter Username" required>
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="form-group col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                <label for="exampleUserName">Username</label>
                <input name="username" type="text" class="form-control" id="exampleUserName"  placeholder="Enter Username" required>
            </div>
        </div>


        <div class="row d-flex justify-content-center">
        <div class="form-group col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
            <label for="examplePassword">Password</label>
            <input name="password" type="password" class="form-control" id="examplePassword"  placeholder="Enter Password" required>
          </div>
          </div>

          <div class="row d-flex justify-content-center">
          <button type="submit" class="btn btn-primary">Submit</button>
          </div>
          </form>
        
      </form>
    </div>
<%- include("partials/footer1") %>